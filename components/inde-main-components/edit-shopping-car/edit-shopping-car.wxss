/* components/inde-main-components/edit-shopping-car/edit-shopping-car.wxss */
.edit_shopping_car_box{
  position:fixed;
  left:0rpx;
  bottom:90rpx;
  background:#fff;
  font-size:34rpx;
  box-sizing:border-box;
  z-index: 555;
  width:100vw;
  height:50%;
  display:flex;
  flex-direction: column;
}
.clear_car{
  height: 10%;
  font-size:24rpx;
  color:#aaa;
  background: #eee;
  padding-left:40rpx;
  line-height: 80rpx;
}
.car_list_box{
  height: 90%;
  overflow-y: auto;
  display: flex;
  padding:0rpx 40rpx;  
}
.car_list{
  border-bottom:2rpx solid #ccc;
  padding:10rpx 0rpx;
  width:100%;
  height: 1;
}
.title_box{
  height:30%;
}
.msg_box{
  height:30%;  
}
.option_box{
  width:50%;
}
.price_box{
  width:20%;  
}

.product_name{
  font-size:28rpx;
  font-weight:700;
}
.product_desc{
  margin:10rpx 0rpx;
  display: block;
  font-size:26rpx;
  color:#bbb;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}
.product_price{
  font-weight: 900;
  font-size:34rpx;
}